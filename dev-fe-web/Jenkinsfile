pipeline {
    agent any
    environment {
        REPO_URL = 'https://github.com/JiaG293/test-fe.git'
        WORKDIR = 'dev-fe-web'
        IMAGE_TAG = "latest"  // Or use ${BUILD_NUMBER} or git commit hash
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: REPO_URL
            }
        }

        stage('Load ENV File') {
            steps {
                script {
                    withCredentials([file(credentialsId: 'roomx-fe-dev-env', variable: 'ENV_FILE')]) {
                        sh '''
                            set -x
                            chmod 644 $ENV_FILE
                            rm -f $WORKDIR/.env || true
                            cp $ENV_FILE $WORKDIR/.env || true
                            ls -la $WORKDIR/
                        '''
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh '''
                        cd $WORKDIR
                        docker compose down roomx-fe || true
                        docker images --format "{{.Repository}}:{{.Tag}}" | grep "roomx-fe" | xargs -r docker rmi -f || true
                        docker compose build roomx-fe
                    '''
                }
            }
        }

        stage('Start/Restart Container') {
            steps {
                script {
                    sh '''
                        cd $WORKDIR
                        docker compose up -d --force-recreate roomx-fe
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}